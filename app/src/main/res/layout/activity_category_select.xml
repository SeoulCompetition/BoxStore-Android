<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context="com.b05studio.boxstore.view.activity.CategorySelectActivity">

    <View
        android:id="@+id/categorySelectTitleBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#4B65A7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/sellBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:src="@drawable/ic_back_button"
        app:layout_constraintBottom_toBottomOf="@+id/categorySelectTitleBar"
        app:layout_constraintLeft_toLeftOf="@+id/categorySelectTitleBar"
        app:layout_constraintTop_toTopOf="@+id/categorySelectTitleBar" />

    <TextView
        fontPath="fonts/NOTOSANSKR-REGULAR.OTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="카테고리"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/categorySelectTitleBar"
        app:layout_constraintLeft_toLeftOf="@+id/categorySelectTitleBar"
        app:layout_constraintRight_toRightOf="@+id/categorySelectTitleBar"
        app:layout_constraintTop_toTopOf="@+id/categorySelectTitleBar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/categorySelectRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categorySelectTitleBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        >

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
