<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context="com.b05studio.boxstore.view.activity.IdentificationActivity"
    tools:ignore="MissingPrefix"
    >

    <View
        android:id="@+id/identifyTitleView"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 본인확인"
        app:layout_constraintLeft_toLeftOf="@+id/identifyTitleView"
        app:layout_constraintRight_toRightOf="@+id/identifyTitleView"
        app:layout_constraintTop_toTopOf="@+id/identifyTitleView"
        app:layout_constraintBottom_toBottomOf="@+id/identifyTitleView"
        android:textSize="13sp"
        fontPath="fonts/NOTOSANSKR-REGULAR.OTF"/>


    <EditText
        android:id="@+id/identifyNameEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="이름"
        android:background="@drawable/login_input_textview"
        app:layout_constraintTop_toBottomOf="@+id/identifyTitleView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="10sp"
        android:textColor="#95989A"
        android:paddingStart="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        fontPath="fonts/NOTOSANSKR-LIGHT.OTF"
        />

    <EditText
        android:id="@+id/identifyPhoneNumEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="휴대전화 번호 입력(01012345678)"
        android:background="@drawable/login_input_textview"
        app:layout_constraintTop_toBottomOf="@+id/identifyNameEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="10sp"
        android:textColor="#95989A"
        android:paddingStart="18dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        fontPath="fonts/NOTOSANSKR-LIGHT.OTF"
        android:inputType="phone" />

    <ImageButton
        android:id="@+id/identifyRequestAuthCodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_identify_request_auth_button"
        app:layout_constraintTop_toTopOf="@+id/identifyPhoneNumEditText"
        app:layout_constraintBottom_toBottomOf="@+id/identifyPhoneNumEditText"
        app:layout_constraintRight_toRightOf="@+id/identifyPhoneNumEditText"
        android:layout_marginEnd="6dp"
        android:background="@null"
        />

    <EditText
        android:id="@+id/identifyAuthCodeEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="인증 코드 입력"
        android:background="@drawable/login_input_textview"
        app:layout_constraintTop_toBottomOf="@+id/identifyPhoneNumEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="10sp"
        android:textColor="#95989A"
        android:paddingStart="18dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        fontPath="fonts/NOTOSANSKR-LIGHT.OTF"
        />

    <Button
        android:id="@+id/identifyNextButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="다음"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/identifyAuthCodeEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/next_button_style"
        />

</android.support.constraint.ConstraintLayout>
