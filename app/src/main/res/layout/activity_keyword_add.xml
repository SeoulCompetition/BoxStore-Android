<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/sellTitlebar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/seoul"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/keywordAddBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:src="@drawable/ic_back_button"
        app:layout_constraintBottom_toBottomOf="@+id/sellTitlebar"
        app:layout_constraintLeft_toLeftOf="@+id/sellTitlebar"
        app:layout_constraintTop_toTopOf="@+id/sellTitlebar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fontPath="fonts/NOTOSANSKR-REGULAR.OTF"
        android:text="키워드 추가하기"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/sellTitlebar"
        app:layout_constraintLeft_toLeftOf="@+id/sellTitlebar"
        app:layout_constraintRight_toRightOf="@+id/sellTitlebar"
        app:layout_constraintTop_toTopOf="@+id/sellTitlebar"
        tools:ignore="MissingPrefix" />
    
    <View
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/sellTitlebar"
        android:id="@+id/keyword_view"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent">
    </View>

    <ImageView
        android:id="@+id/keyword_icon"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="11dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_actionbar_shop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/keyword_view" />

    <TextView
        android:gravity="center_vertical"
        fontPath="fonts/NOTOSANSKR-REGULAR.OTF"
        android:textSize="12dp"
        android:text="키워드"
        android:maxLines="1"
        android:id="@+id/keyword_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix"
        app:layout_constraintTop_toTopOf="@+id/keyword_view"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/keyword_icon"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/keyword_icon"
        android:layout_marginLeft="5dp"
        app:layout_constraintVertical_bias="0.0" />
    
    <EditText
        android:background="@color/gray_bg"
        android:id="@+id/edit_keyword"
        android:paddingLeft="18.5dp"
        android:textSize="10dp"
        android:hint="상품의 키워드를 입력하세요"
        fontPath="fonts/NOTOSANSKR-REGULAR.OTF"
        android:layout_width="328dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toTopOf="@+id/keyword_view"
        android:layout_marginTop="38dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        android:cursorVisible="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/keyword_view"
        android:layout_marginBottom="8dp" />


    <View
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/keyword_view"
        android:id="@+id/category_view"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent">
    </View>

    <ImageView
        android:src="@drawable/ic_category"
        android:layout_width="15dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@+id/category_view"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/category_image" />

    <TextView
        android:gravity="center_vertical"
        fontPath="fonts/NOTOSANSKR-REGULAR.OTF"
        android:textSize="12dp"
        android:text="카테고리"
        android:maxLines="1"
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix"
        app:layout_constraintTop_toTopOf="@+id/category_view"
        android:layout_marginTop="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/category_image"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/category_image"
        android:layout_marginLeft="5dp"
        app:layout_constraintVertical_bias="0.0">

    </TextView>

    <TextView
        android:id="@+id/category_explain"
        android:textColor="#95989A"
        android:text="상품의 카테고리를 선택해 주세요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/category_view"
        android:layout_marginTop="47dp"
        app:layout_constraintBottom_toBottomOf="@+id/category_view"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="17.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.909" />


    <ImageButton
        android:background="@color/white"
        android:id="@+id/category_select_btn"
        android:src="@drawable/ic_sell_category_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/category_view"
        android:layout_marginTop="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/category_view"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="19dp"
        app:layout_constraintVertical_bias="0.956"
        app:layout_constraintRight_toRightOf="@+id/category_view" />

    <TextView
        android:id="@+id/addKeywordBtn"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_seoul_round_box"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="@color/white"
        fontPath="fonts/NOTOSANSKR-REGULAR.OTF"
        android:gravity="center"
        android:textSize="13dp"
        android:text="추가하기"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/category_view" />

</android.support.constraint.ConstraintLayout>