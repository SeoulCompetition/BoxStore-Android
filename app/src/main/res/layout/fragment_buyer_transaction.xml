<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/buyerTitleBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#4B65A7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/chatBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:src="@drawable/ic_back_button"
        app:layout_constraintBottom_toBottomOf="@+id/buyerTitleBar"
        app:layout_constraintLeft_toLeftOf="@+id/buyerTitleBar"
        app:layout_constraintTop_toTopOf="@+id/buyerTitleBar" />

    <TextView
        android:id="@+id/opponentName"
        fontPath="fonts/NOTOSANSKR-REGULAR.OTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="거래하기"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/buyerTitleBar"
        app:layout_constraintLeft_toLeftOf="@+id/buyerTitleBar"
        app:layout_constraintRight_toRightOf="@+id/buyerTitleBar"
        app:layout_constraintTop_toTopOf="@+id/buyerTitleBar" />


    <View
        android:id="@+id/buyProductPriceView"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buyerTitleBar" />

    <ImageView
        android:id="@+id/buyProductPriceImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_sell_price"
        app:layout_constraintLeft_toLeftOf="@+id/buyProductPriceView"
        app:layout_constraintTop_toTopOf="@+id/buyProductPriceView" />

    <TextView
        android:id="@+id/textView4"
        fontPath="fonts/NOTOSANSKR-MEDIUM.OTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:includeFontPadding="false"
        android:text="거래 가격"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/buyProductPriceImage"
        app:layout_constraintLeft_toRightOf="@+id/buyProductPriceImage"
        app:layout_constraintTop_toTopOf="@+id/buyProductPriceImage" />

    <EditText
        android:id="@+id/buyProductPriceEditText"
        fontPath="fonts/NOTOSANSKR-DEMILIGHT.OTF"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/bg_sell_edittext"
        android:hint="거래할 가격을 입력해주세요"
        android:includeFontPadding="false"
        android:paddingStart="16dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/buyProductPriceView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buyProductPriceView" />

    <View
        android:id="@+id/stationSelectView"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buyProductPriceView" />

    <ImageView
        android:id="@+id/stationIamge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_newitem_pin"
        app:layout_constraintLeft_toLeftOf="@+id/stationSelectView"
        app:layout_constraintTop_toTopOf="@+id/stationSelectView" />

    <TextView
        fontPath="fonts/NOTOSANSKR-MEDIUM.OTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:includeFontPadding="false"
        android:text="거래역"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/stationIamge"
        app:layout_constraintLeft_toRightOf="@+id/stationIamge"
        app:layout_constraintTop_toTopOf="@+id/stationIamge" />

    <EditText
        android:id="@+id/stationText"
        fontPath="fonts/NOTOSANSKR-DEMILIGHT.OTF"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/bg_sell_edittext"
        android:hint="거래 역을 입력해 주세요"
        android:includeFontPadding="false"
        android:paddingStart="16dp"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/stationSelectView"
        app:layout_constraintRight_toRightOf="@+id/stationSelectView"
        app:layout_constraintTop_toTopOf="@+id/stationSelectView" />


    <Button
        android:id="@+id/compleTransactionBtn"
        fontPath="fonts/NOTOSANSKR-MEDIUM.OTF"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_next_button_style"
        android:text="완료"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stationSelectView">

    </Button>


</android.support.constraint.ConstraintLayout>