<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/firstStuffImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/secondStuffImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        />

    <TextView
        android:id="@+id/firstStuffTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/firstStuffImage"
        app:layout_constraintLeft_toLeftOf="@+id/firstStuffImage"
        app:layout_constraintRight_toRightOf="@+id/firstStuffImage"
        android:layout_marginTop="24dp"
        android:includeFontPadding="false"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"

        />

    <TextView
        android:id="@+id/firstStuffMoneyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/firstStuffImage"
        app:layout_constraintLeft_toLeftOf="@+id/firstStuffImage"
        app:layout_constraintRight_toRightOf="@+id/firstStuffImage"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        android:textSize="10sp"
        android:textColor="#4B65A7"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <ImageView
        android:id="@+id/secondStuffImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/firstStuffImage"
        app:layout_constraintRight_toLeftOf="@+id/thirdStuffImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        />

    <TextView
        android:id="@+id/secondStuffTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/secondStuffImage"
        app:layout_constraintLeft_toLeftOf="@+id/secondStuffImage"
        app:layout_constraintRight_toRightOf="@+id/secondStuffImage"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:includeFontPadding="false"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        />

    <TextView
        android:id="@+id/secondStuffMoneyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/secondStuffImage"
        app:layout_constraintLeft_toLeftOf="@+id/secondStuffImage"
        app:layout_constraintRight_toRightOf="@+id/secondStuffImage"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        android:textSize="10sp"
        android:textColor="#4B65A7"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/thirdStuffImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/secondStuffImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        />

    <TextView
        android:id="@+id/thirdStuffTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/thirdStuffImage"
        app:layout_constraintLeft_toLeftOf="@+id/thirdStuffImage"
        app:layout_constraintRight_toRightOf="@+id/thirdStuffImage"
        android:layout_marginTop="24dp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        />

    <TextView
        android:id="@+id/thirdStuffMoneyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/thirdStuffImage"
        app:layout_constraintLeft_toLeftOf="@+id/thirdStuffImage"
        app:layout_constraintRight_toRightOf="@+id/thirdStuffImage"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        android:textSize="10sp"
        android:textColor="#4B65A7"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>