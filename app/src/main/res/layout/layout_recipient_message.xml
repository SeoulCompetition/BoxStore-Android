<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/recChatView"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <TextView
        android:id="@+id/text_view_recipient_message"
        fontPath="fonts/NOTOSANSKR-REGULAR.OTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_seller_chat_box"
        android:padding="8dp"
        android:textColor="#727272"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/recChatView"
        app:layout_constraintTop_toTopOf="@id/recChatView"
        tools:text="Hi. How are you?" />

    <TextView
        android:id="@+id/recChatTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="15:24"
        android:textSize="6sp"
        app:layout_constraintLeft_toRightOf="@id/recChatView"
        app:layout_constraintTop_toTopOf="@id/recChatView"
        app:layout_constraintBottom_toBottomOf="@id/recChatView"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="8dp" />

    <ImageView
        android:id="@+id/image_view_recipient_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_seller_chat_box"
        android:padding="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/recChatView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/recChatView"
        app:layout_constraintTop_toTopOf="@id/recChatView" />

</android.support.constraint.ConstraintLayout>