<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/seoul</item>
        <item name="colorPrimaryDark">@color/seoul</item>
    </style>

    <!-- BottomNavigation theme. -->
    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@drawable/navigation_bar_item_bg</item>
        <item name="itemIconTint">@drawable/navigation_bar_item_selector</item>
        <item name="itemTextColor">@drawable/navigation_bar_item_selector</item>
    </style>

    <!-- NoActionBar theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--CustomSpinner theme. -->
    <style name="CustomSpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ic_recycler_more</item>
    </style>

    <!--CustomRating bar. -->



    -<style parent="@android:style/Widget.RatingBar" name="customRatingBar">

    <item name="android:progressDrawable">@drawable/custom_ratingbar</item>

</style>

</resources>
